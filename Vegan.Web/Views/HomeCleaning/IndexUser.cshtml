@model IEnumerable<Vegan.Entities.Home.HomeCleaning>

@{
    ViewBag.Title = "Vegan Home Cleaning Products";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div id="top" pxlurl="[product_url]">
    <div class="contentbox-wrapper">
        <div class="contentbox">
            <div id="pageheader" class="docsection-wrapper">
                <div class="docsection boxed">
                    <div class="breadcrumbs-wrapper clearfix">
                        <div class="breadcrumbs">
                            <section>
                                <p><a id='catCrumbHomeLink' href='/'>Home</a> > <a href="/HomeVegan/IndexUser">Home Products > </a> <a href="/HomeCleaning/IndexUser">Home Cleaning</a></p>
                            </section>
                        </div>
                    </div>
                    <div class="title-wrapper clearfix">
                        <div class="title">
                            <header>
                                <h1>Home Cleaning</h1>
                            </header>
                        </div>
                    </div>
                </div>
            </div>
            <div class="productlist docsection-wrapper">
                <div class="docsection boxed">
                    <div class="header-wrapper clearfix">
                        <div class="header">
                            <header>
                                <h2>
                                    <small>Total Items: @Model.ToList().Count() </small>
                                </h2>
                            </header>
                        </div>
                    </div>
                    <div id="subcategories" class="othercategories docsection-wrapper">
                        <div class="docsection boxed">
                            @*Empty div that gives nice space*@
                        </div>
                    </div>
                    <div class="content-wrapper clearfix">
                        <div class="content">
                            @foreach (var item in Model)
                            {
                                <div class="product">
                                    <div class="image" style=" background-image: url( @Html.DisplayFor(modelItem => item.ImageURL));"><img src="@Html.DisplayFor(modelItem => item.ImageURL)"></div>
                                    <div class="frame"></div>
                                    <div class="info">
                                        <div class="info-data">
                                            <div>
                                                <div>
                                                    @Html.ActionLink("Read More", "DetailsHomeCleaning", new { productId = item.Id })
                                                    <div class="price">
                                                        <span class="yourprice">Your Price: <strong>€ @Html.DisplayFor(modelItem => item.Price) </strong></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @*Brings dynamicly the title and tranform it into a link connected to the candle's details*@
                                    <h3>  @Html.ActionLink((@Html.DisplayFor(modelItem => item.Title).ToString()), "DetailsHomeCleaning", new { productId = item.Id })</h3>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



