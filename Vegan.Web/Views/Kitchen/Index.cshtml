@model IEnumerable<Vegan.Entities.Home.Kitchen>

@{
    ViewBag.Title = "Kitchens";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="wrapper ">

    <div class="panel-header panel-header-sm">
    </div>
    <div class="content container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title"> Kitchens Table</h4>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive container">
                            <table class="table">
                                <div class="text-right">
                                    @Html.ActionLink("Add Kitchen Product", "AddKitchen")<span style="color:orangered"> |</span>
                                    <hr />
                                </div>
                                <thead class=" text-primary">
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImageURL)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Information)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Instructions)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Price)
                                </th>
                                <th class="text-right">
                                    Action
                                </th>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </td>
                                            <td>
                                                <img src="@item.ImageURL" width="70" height="70" alt="@item.Title" />
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Information)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Instructions)
                                            </td>
                                            <td>
                                                € @Html.DisplayFor(modelItem => item.Price)
                                            </td>


                                            <td class="text-right">

                                                @Html.ActionLink("Edit", "EditKitchen", new { productId = item.Id })<span style="color:orangered"> |</span>
                                                <hr />
                                                @Html.ActionLink("User | View", "DetailsKitchen", new { productId = item.Id })<span style="color:orangered"> |</span>
                                                <hr />
                                                @Html.ActionLink("Delete", "DeleteKitchen", new { productId = item.Id })<span style="color:orangered"> |</span>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer">
        <div class=" container-fluid ">
            <nav>
                <ul>
                    <li>
                        <a href="https://www.creative-tim.com">
                            Creative Tim
                        </a>
