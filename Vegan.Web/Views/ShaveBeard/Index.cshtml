@model IEnumerable<Vegan.Entities.Care.ShaveBeard>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create shaving product", "AddShaveBeard")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Directions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameOfIngredient)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValueOfIngredient)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Information)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        <img src="@item.ImageURL" width='100' height='100' alt="@item.Title" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Directions)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NameOfIngredient)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ValueOfIngredient)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Information)
    </td>
    <td>
        @Html.ActionLink("Edit", "EditShaveBeard", new { productId = item.Id }) |
        @Html.ActionLink("Details", "DetailsShaveBeard", new { productId = item.Id }) |
        @Html.ActionLink("Delete", "DeleteShaveBeard", new { productId = item.Id })
    </td>
</tr>
}

</table>
