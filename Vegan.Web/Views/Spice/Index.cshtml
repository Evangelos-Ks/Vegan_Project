@model IEnumerable<Vegan.Entities.FoodHerb.Spice>

@{
    ViewBag.Title = "Spices";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="wrapper ">

    <div class="panel-header panel-header-sm">
    </div>
    <div class="content container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title"> Spices Table</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive container">
                            <div class="text-right">
                                @Html.ActionLink("Add Spice", "AddSpice")
                                <span style="color:orangered"></span>
                                <hr />
                            </div>
                            <table class="table">
                                <thead class=" text-primary">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Title)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ImageURL)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Description)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.BulkPricing)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Information)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.NameOfIngredient)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Price)
                                        </th>
                                        <th class="text-right">
                                            Action
                                        </th>
                                    </tr>

                                </thead>


                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </td>
                                            <td>
                                                <img src="@item.ImageURL" width="70" height="70" alt="@item.Title" />
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.BulkPricing)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Information)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NameOfIngredient)
                                            </td>
                                            <td>
                                                € @Html.DisplayFor(modelItem => item.Price)
                                            </td>
                                            <td class="text-right">

                                                @Html.ActionLink("Edit", "EditSpice", new { productId = item.Id })<span style="color:orangered"></span>
                                                <hr />
                                                @Html.ActionLink("User View", "DetailsSpice", new { productId = item.Id })<span style="color:orangered"></span>
                                                <hr />
                                                @Html.ActionLink("Delete", "DeleteSpice", new { productId = item.Id })<span style="color:orangered"></span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
