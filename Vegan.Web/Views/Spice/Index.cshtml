@model IEnumerable<Vegan.Entities.FoodHerb.Spice>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create spice", "AddSpice")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BulkPricing)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Information)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        <img src="@item.ImageURL" width='100' height='100' alt="@item.Title" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BulkPricing)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Information)
    </td>
    <td>
        @Html.ActionLink("Edit", "EditSpice", new { productId = item.Id }) |
        @Html.ActionLink("Details", "DetailsSpice", new { productId = item.Id }) |
        @Html.ActionLink("Delete", "DeleteSpice", new { productId = item.Id })
    </td>
</tr>
}

</table>
