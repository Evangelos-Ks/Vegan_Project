@model IEnumerable<Vegan.Entities.FoodHerb.SproutingSeed>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New Sprouting seed", "AddSproutingSeed")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Information)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameOfIngredient)
        </th>

        @{
            bool includedValuOfIngredient = false;
            foreach (var item in Model)
            {
                if (string.IsNullOrWhiteSpace(item.ValueOfIngredient))
                {
                    includedValuOfIngredient = false;

                }
                else
                {
                    includedValuOfIngredient = true;

                }


            }

            if (includedValuOfIngredient)
            {
                <th>
                    @Html.DisplayNameFor(model => model.ValueOfIngredient)
                </th>
            }


        }
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            <img src="@item.ImageURL" width="100" height="100" alt="@item.Title" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Information)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameOfIngredient)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValueOfIngredient)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditSproutingSeed", new { productId=item.Id }) |
            @Html.ActionLink("Details", "DetailsSproutingSeed", new { productId = item.Id }) |
            @Html.ActionLink("Delete", "DeleteSproutingSeed", new { productId = item.Id })
        </td>
    </tr>
}

</table>
